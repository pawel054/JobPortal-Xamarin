<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobPortal.View.CarouselPages.CategoryPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="AddCategoryView" HorizontalOptions="Center" IsVisible="False" Margin="0,30,0,30">
                <Label Text="Dodaj ofertę" FontSize="22" HorizontalOptions="Center"/>
                <Entry x:Name="entryCategoryName" Placeholder="Nazwa" HorizontalTextAlignment="Center" WidthRequest="250" Margin="0,20,0,20"/>
                <Button Text="Dodaj" BackgroundColor="#400DD0" TextColor="White" CornerRadius="20" Clicked="BtnAddCategory" WidthRequest="150" HorizontalOptions="Center"/>
                <Button Text="Zamknij" BackgroundColor="Transparent" BorderColor="#400DD0" BorderWidth="2" TextColor="#400DD0" CornerRadius="20" Clicked="BtnClose" WidthRequest="150" HorizontalOptions="Center" Margin="0,10,0,0"/>
            </StackLayout>
            <StackLayout x:Name="CategoryView">
                <Grid Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Text="Kategorie" FontSize="30" HorizontalOptions="Center" Margin="0,30,0,30"/>
                    <Button x:Name="dodajBtn" Grid.Row="1" Text="Dodaj" Background="#400DD0" Margin="0,0,0,30" TextColor="White" HorizontalOptions="Center" WidthRequest="200" CornerRadius="20" Clicked="BtnCategoryView"/>
                    <Grid Grid.Row="2" HorizontalOptions="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="ID" Grid.Column="0" FontSize="20" Margin="0,0,20,0"/>
                        <Label Text="Nazwa" Grid.Column="1" WidthRequest="200" FontSize="20" Margin="0,0,0,0"/>
                    </Grid>
                    <ScrollView Grid.Row="3">
                        <CollectionView x:Name="collectionCategory">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <SwipeView>
                                        <SwipeView.LeftItems>
                                            <SwipeItem Text="Akcja"/>
                                        </SwipeView.LeftItems>

                                        <Grid HorizontalOptions="Center" Margin="0,20,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Text="{Binding CategoryID}" Grid.Column="0" FontSize="20" Margin="0,0,30,0"/>
                                            <Label Text="{Binding Name}" Grid.Column="1" FontSize="20" Margin="0,0,0,0" WidthRequest="200"/>
                                        </Grid>
                                    </SwipeView>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>
                </Grid>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>